<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.asia.yongyou.yongyouagent">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <!-- 访问网络状态的权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 手机有没有连接到wifi -->
    <uses-permission android:name="android.permission.ACCES_MOCK_LOCATION" />

    <uses-feature
        android:name="android.hardware.usb.host"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="用友代理商"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            />
        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.fandang.idcard.IdentificationActivity" />
        <activity android:name=".activity.fandang.idcard.IdCardInfoActivity" />
        <activity android:name=".activity.fandang.idcard.IdCardPicsActivity" />
        <activity android:name=".activity.fandang.idcard.IdCardPicsNewActivity" />
        <activity
            android:name=".activity.fandang.idcard.IdCardScanActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.fandang.PhoneCheckActivity" />
        <activity android:name=".activity.login.LoginActivity"></activity>
        <activity android:name=".activity.UserActivity" />
        <activity android:name=".activity.open.ChooseNumActivity"></activity>
        <activity
            android:name=".activity.PackageActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"></activity>
        <activity android:name=".activity.open.ValueAddedProdActivity"></activity>
        <activity android:name=".activity.open.ValueAddedProdDetailActivity"></activity>
        <activity android:name=".activity.open.OpenConnectBlueActivity"></activity>
        <activity android:name=".activity.open.OpenCustomerActivity"></activity>
    </application>

</manifest>