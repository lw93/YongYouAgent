<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/comm_header"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:id="@+id/main_img"
        android:layout_below="@+id/comm_header"
        android:src="@mipmap/main_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/level1"
        android:layout_below="@id/main_img"
        android:layout_marginTop="15dp"
        android:paddingTop="@dimen/padding_10"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/archive">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_archive"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/fd_nor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_archive"
            android:layout_marginTop="16dp"
            android:text="返档"
            android:layout_centerHorizontal="true"
            android:textColor="@color/main_text"
            android:textSize="@dimen/main_text_size"/>

    </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/open"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/kh_nor"
                android:id="@+id/img_open"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_open"
                android:textColor="@color/main_text"
                android:textSize="@dimen/main_text_size"
                android:text="开户"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text"
                android:textSize="@dimen/main_text_size"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
