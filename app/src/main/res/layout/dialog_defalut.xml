<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/roundedcorner_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_default_msg"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/text_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_default_left_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/roundedcorner_left_btn"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:text="@string/chancel" />
        
        <View android:layout_height="45dp"
            android:layout_width="0.3dip"
            android:background="@color/white"/>

        <Button
            android:id="@+id/dialog_default_right_btn"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:background="@drawable/roundedcorner_right_btn"
            android:textColor="@color/text_white"
            android:text="@string/sure" />
    </LinearLayout>

</LinearLayout>