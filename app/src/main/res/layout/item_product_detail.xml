<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="17dp"
        android:paddingTop="17dp">

        <CheckBox
            android:id="@+id/selectView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/comment_margin_10"
            android:background="@drawable/selector_checkbox"
            android:button="@null"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/prod_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@+id/selectView"
            android:text="代理商产品"
            android:textColor="@color/text_black"
            android:textSize="15sp" />


        <CheckBox
            android:id="@+id/expanded_btn"
            android:layout_width="10dp"
            android:layout_height="7dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="27dp"
            android:background="@drawable/selector_checkbox_arrow"
            android:button="@null"
            android:scaleType="centerCrop" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
         android:background="#E3DFDF"/>

    <TextView
        android:id="@+id/prod_detail_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="9dp"
        android:paddingTop="9dp"
        android:lineSpacingExtra="8dp"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="27dp"
        android:textSize="14sp"
        android:textColor="#666666"
        android:text="许多话特别多的话我的天哪游多多呢我自己都不知道哎"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E3DFDF"/>

</LinearLayout>