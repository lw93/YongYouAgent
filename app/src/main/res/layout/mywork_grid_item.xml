<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/mywork_grid_root"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mywork_grid_item_img"
        android:layout_width="@dimen/comment_width"
        android:layout_height="@dimen/comment_height"
        android:scaleType="centerCrop"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/mywork_grid_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/comment_margin_8"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>