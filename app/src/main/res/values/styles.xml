<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="bottom_menu_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_rbtn_home_tab_menu</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@drawable/selector_rbtn_menu_txt</item>
        <item name="android:textSize">12sp</item>
    </style>


    <!-- noactionbar application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--記住密码checkbox样式 -->
    <style name="ForgetCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_forget_selector</item>
    </style>

    <style name="LoginPwdVisiable" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/login_pwd_visiable_selector</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="edit_cancel_style">
        <item name="android:layout_height">@dimen/height_40</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:drawablePadding">@dimen/padding_5</item>
        <item name="android:padding">@dimen/padding_10</item>
        <item name="android:minWidth">@dimen/height_40</item>
        <item name="android:drawableRight">@mipmap/ic_clear</item>
    </style>

    <style name="idcard_lay_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_30</item>
        <item name="android:paddingRight">@dimen/padding_24</item>
        <item name="android:paddingTop">@dimen/padding_22</item>
        <item name="android:paddingBottom">@dimen/padding_22</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="idcard_desc1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:paddingTop">@dimen/padding_10</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="idcard_desc2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">@dimen/padding_15</item>
    </style>
</resources>
